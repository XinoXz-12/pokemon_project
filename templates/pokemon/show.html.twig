{% extends 'base.html.twig' %}

{% block title %}PokemonApp - Pokemon Detalle{% endblock %}

{% block body %}
    <h1>Detalle del pokemon</h1>

    <img src="https://img.pokemondb.net/artwork/{{ pokemon.name|url_encode }}.jpg" alt="Imagen de {{ pokemon.name }}" width="30" height="30"/>

    <table class="table">
        <tbody>
            <tr>
                <th>Id / NÂº</th>
                <td>{{ pokemon.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ pokemon.name }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ pokemon.type ? pokemon.type|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Imagen</th>
                <td>{{ pokemon.image }}</td>
            </tr>
            <tr>
                <th>Nivel</th>
                <td>{{ pokemon.level }}</td>
            </tr>
            <tr>
                <th>Fuerza</th>
                <td>{{ pokemon.strength }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_pokemon_index') }}">Volver</a>
    <br>
    <a href="{{ path('app_pokemon_edit', {'id': pokemon.id}) }}">Editar</a>
    <br>
    {{ include('pokemon/_delete_form.html.twig') }}
{% endblock %}
