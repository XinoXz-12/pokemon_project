{% extends 'base.html.twig' %}

{% block title %}Hello PokedexController!{% endblock %}

{% block body %}

<h1>Tu Pokedex</h1>

{% if pokedexPokemons is empty %}
    <p>No tienes ningún Pokémon en tu Pokedex.</p>
{% else %}
    <div>
        {% for pokedexPokemon in pokedexPokemons %}
            <div style="margin-bottom: 20px;">
                <p><b>Nombre:</b> {{ pokedexPokemon.pokemon.name }}</p>
                <p><b>Tipo:</b> {{ pokedexPokemon.pokemon.type ? pokedexPokemon.pokemon.type|join(', ') : 'No especificado' }}</p>
                <p><img src="https://img.pokemondb.net/artwork/{{ pokedexPokemon.pokemon.name|url_encode }}.jpg" alt="Imagen de {{ pokedexPokemon.pokemon.name }}" width="100" height="100"/></p>
                <p><b>Nivel:</b> {{ pokedexPokemon.level }}</p>
                <p><b>Fuerza:</b> {{ pokedexPokemon.strength }}</p>
            </div>
        {% endfor %}
    </div>
{% endif %}
{% endblock %}
